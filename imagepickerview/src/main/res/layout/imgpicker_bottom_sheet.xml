<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layCamera"
            style="@style/bottom_sheet_style"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCam"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_bottom_sheet_icon"
                android:padding="15dp"
                android:src="@drawable/ic_photo_camera" />

            <TextView
                android:id="@+id/txtCam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/black" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layGallary"
            style="@style/bottom_sheet_style"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLib"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_bottom_sheet_icon"
                android:padding="15dp"
                android:src="@drawable/ic_photo_library" />

            <TextView
                android:id="@+id/txtLib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/black" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layRemove"
            style="@style/bottom_sheet_style"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDel"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_bottom_sheet_icon"
                android:padding="15dp"
                android:src="@drawable/ic_delete_avatar" />

            <TextView
                android:id="@+id/txtDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/black" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>